{
  "name": "backend",
  "version": "0.0.0",
  "description": "typescript-express-starter-default",
  "license": "ISC",
  "scripts": {
    "build": "rm -rf lib/* && tsc",
    "start": "NODE_ENV=production ts-node --transpile-only src/server.ts",
    "dev": "NODE_ENV=development nodemon --watch src --delay 1 --exec 'ts-node' src/server.ts",
    "test": "jest --forceExit --detectOpenHandles",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "orm": "ts-node --project tsconfig.server.json ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "argon2": "^0.26.2",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "cors": "^2.8.5",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "helmet": "^3.23.3",
    "hpp": "^0.2.3",
    "jest": "^26.2.1",
    "morgan": "^1.10.0",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^26.1.4",
    "ts-node": "^8.10.2",
    "typeorm": "^0.2.25",
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.7",
    "@types/helmet": "0.0.47",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^26.0.7",
    "@types/morgan": "^1.9.1",
    "@types/node": "^14.0.27",
    "@types/supertest": "^2.0.10",
    "supertest": "^4.0.2",
    "tslint": "^6.1.2",
    "tslint-config-airbnb": "^5.11.2"
  }
